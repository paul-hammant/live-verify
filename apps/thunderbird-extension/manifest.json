{
  "manifest_version": 2,
  "name": "LiveVerify",
  "version": "1.0.0",
  "description": "Verify claims in emails against issuer endpoints using SHA-256 hashing",
  "author": "Paul Hammant",
  "homepage_url": "https://github.com/paul-hammant/live-verify",
  "browser_specific_settings": {
    "gecko": {
      "id": "liveverify@paul-hammant.github.io",
      "strict_min_version": "102.0"
    }
  },
  "permissions": [
    "menus",
    "storage",
    "notifications",
    "messagesRead",
    "activeTab"
  ],
  "background": {
    "scripts": ["shared/normalize.js", "shared/verify.js", "background.js"]
  },
  "message_display_action": {
    "default_popup": "popup/popup.html",
    "default_title": "LiveVerify",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "options_ui": {
    "page": "settings/settings.html",
    "open_in_tab": false
  },
  "commands": {
    "verify-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Verify selected text"
    }
  }
}
